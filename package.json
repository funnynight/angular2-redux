{
  "name": "angular2-redux",
  "version": "0.0.0-semantically-released",
  "description": "Wrapper components for using Redux in an Angular2 application",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts -s node_modules/tslint-stylish -t stylish",
    "commit": "git-cz",
    "clean": "rimraf dist",
    "dist": "gulp",
    "test": "karma start",
    "test-once": "karma start --single-run",
    "test-and-dist": "npm run clean && npm run lint && npm run test-once && npm run dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/InfomediaLtd/angular2-redux.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "angular 2",
    "redux"
  ],
  "author": "Ruby Boyarski <rubyboy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InfomediaLtd/angular2-redux/issues"
  },
  "homepage": "https://github.com/InfomediaLtd/angular2-redux#readme",
  "peerDependencies": {
    "redux": "^3.1.7",
    "redux-thunk": "^1.0.3"
  },
  "dependencies": {},
  "devDependencies": {
    "redux": "^3.1.7",
    "redux-thunk": "^1.0.3",
    "angular2": "^2.0.0-beta.2",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^1.1.5",
    "es6-shim": "^0.33.3",
    "ghooks": "^1.0.1",
    "gulp": "^3.9.0",
    "gulp-rimraf": "^0.2.0",
    "gulp-tslint": "^4.2.2",
    "gulp-typescript": "^2.10.0",
    "jasmine-core": "^2.4.1",
    "jspm": "^0.16.25",
    "karma": "^0.13.19",
    "karma-jasmine": "^0.3.6",
    "karma-jspm": "^2.0.2",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "phantomjs": "^1.9.19",
    "phantomjs-polyfill": "0.0.1",
    "reflect-metadata": "0.1.2",
    "rimraf": "^2.4.4",
    "run-sequence": "^1.1.5",
    "rxjs": "5.0.0-beta.0",
    "semantic-release": "^4.3.5",
    "tsc": "^1.20150623.0",
    "tslint": "^3.2.1",
    "tslint-stylish": "^2.1.0-beta",
    "typescript": "^1.7.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test-and-dist"
    }
  },
  "jspm": {
    "dependencies": {
      "angular2": "npm:angular2@^2.0.0-beta.2",
      "redux": "npm:redux@^3.1.7",
      "redux-thunk": "npm:redux-thunk@^1.0.3"
    },
    "devDependencies": {
      "typescript": "npm:typescript@^1.6.2"
    }
  }
}
